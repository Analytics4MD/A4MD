#!/bin/bash

DSPACES_INC="-I%incdir%    "
DSPACES_LIB="-L%libdir% -ldspaces -ldscommon -ldart  -lpthread -lm  -lrt  -lrt  -libverbs  -lrdmacm  "
DSPACES_VER="1.8.0"
DSPACES_ARG="dataspaces 1.8.0 
              '--enable-shmem' '--prefix=/home/exouser/dataspaces' 'CC=/home/exouser/spack/opt/spack/linux-centos7-x86_64_v3/gcc-5.5.0/mpich-4.0.2-iqiztcdujqiapm2twmbbwxq6tvvtvc6w/bin/mpicc' 'CFLAGS=-fPIC' 'CXX=/home/exouser/spack/opt/spack/linux-centos7-x86_64_v3/gcc-5.5.0/mpich-4.0.2-iqiztcdujqiapm2twmbbwxq6tvvtvc6w/bin/mpicxx' 'FC=/home/exouser/spack/opt/spack/linux-centos7-x86_64_v3/gcc-5.5.0/mpich-4.0.2-iqiztcdujqiapm2twmbbwxq6tvvtvc6w/bin/mpifort'"

OPTIND=1

PRINT_CFLAGS=no
PRINT_LDFLAGS=no
PRINT_VERSION=no
PRINT_ARGUMENTS=no

function usage() {
    echo "`basename $0` [-c | -l | -v | -V]
Arguments
    -c Compiler flags
    -l Linker flags
    -v Version flags
    -v Configure options"
}

while getopts "h?clvV" opt; do
    case "$opt" in
    h|\?)
        usage
        exit 0
        ;;
    c)
        PRINT_CFLAGS=yes
        ;;
    l)
        PRINT_LDFLAGS=yes
        ;;
    v)
	PRINT_VERSION=yes
	;;
    V)
        PRINT_ARGUMENTS=yes
        ;;    
    esac
done

if [ "$PRINT_CFLAGS" == "yes" ]; then
    echo $DSPACES_INC
fi

if [ "$PRINT_LDFLAGS" == "yes" ]; then
    echo $DSPACES_LIB
fi

if [ "$PRINT_VERSION" == "yes" ]; then
    echo $DSPACES_VER
fi
if [ "$PRINT_ARGUMENTS" == "yes" ]; then
    echo $DSPACES_ARG
fi
